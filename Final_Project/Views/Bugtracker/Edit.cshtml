                @Html.TextBoxFor(model => model.name, new { @class = "edit-field" })
                @Html.ValidationMessageFor(model => model.name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.client, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.client, new { @class = "edit-field" })
